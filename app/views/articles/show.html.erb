
<%= render 'navbar', article: @article %>

<div class="container">

  <h2>  <%= @article.title %> </h2>
  <hr>

 <%= link_to article_path(@article), class: "link", method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="far fa-trash-alt"></i>

  <% end %>

   <%= link_to edit_article_path(@article) do %>
    <i class="far fa-edit"></i>
  <% end %>

  <p> <%= @article.content %></p>
</div>
